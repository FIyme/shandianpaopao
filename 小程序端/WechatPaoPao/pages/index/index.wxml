<!--index.wxml-->
<view class="container">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" class="swiper-container">
    <block wx:for="{{imgUrls}}" wx:key="{{imgUrls.index}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image" bindtap='banner_detail' />
      </swiper-item>
    </block>
  </swiper>
  <view class="content">
    <view class="weui-grids">
      <block>
        <navigator url="../type1/index" class="weui-grid" hover-class="weui-grid_active">
          <image class="weui-grid__icon" src="../../images/grid_1.png" />
          <view class="weui-grid__label">取快递</view>
        </navigator>
      </block>
      <block>
        <navigator url="../type2/index" class="weui-grid" hover-class="weui-grid_active">
          <image class="weui-grid__icon" src="../../images/grid_2.png" />
          <view class="weui-grid__label">寄快递</view>
        </navigator>
      </block>
      <block>
        <navigator url="../type3/index" class="weui-grid" hover-class="weui-grid_active">
          <image class="weui-grid__icon" src="../../images/grid_3.png" />
          <view class="weui-grid__label">交电费</view>
        </navigator>
      </block>
      <block>
        <navigator url="../type4/index" class="weui-grid" hover-class="weui-grid_active">
          <image class="weui-grid__icon" src="../../images/grid_4.png" />
          <view class="weui-grid__label">万能帮</view>
        </navigator>
      </block>
      <block>
        <navigator url="../type3/index" class="weui-grid" hover-class="weui-grid_active">
          <image class="weui-grid__icon" src="../../images/grid_5.png" />
          <view class="weui-grid__label">招贤纳士</view>
        </navigator>
      </block>
      <block>
        <navigator url="../type4/index" class="weui-grid" hover-class="weui-grid_active">
          <image class="weui-grid__icon" src="../../images/grid_6.png" />
          <view class="weui-grid__label">百度公开课</view>
        </navigator>
      </block>
    </view>


  </view>
  <view>
    <image src='../../images/footer.png' class='footer' />

  </view>

</view>