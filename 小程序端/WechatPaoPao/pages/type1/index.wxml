<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">收件人</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" placeholder="请输入收件人信息" />
    </view>
  </view>
  <view class="weui-cell weui-cell_input weui-cell_vcode">
    <view class="weui-cell__hd">
      <view class="weui-label">手机号</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" placeholder="请输入手机号" />
    </view>
  </view>
  <view class="weui-cell weui-cell_input weui-cell_vcode">
    <view class="weui-cell__hd">
      <view class="weui-label">宿舍楼</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" placeholder="请输入宿舍楼" />
    </view>
  </view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">
        <textarea class="weui-textarea" placeholder="请粘贴快递短信信息" style="height: 4.3em" />
        <view class="weui-textarea-counter">0/200</view>
      </view>
    </view>
  </view>
  <view class="weui-cell weui-cell_input weui-cell_vcode">
    <view class="weui-cell__hd">
      <view class="weui-label">快递大小</view>
    </view>
    <view class="weui-cell__bd">
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
        <view class='weui-input picker-input'>请选择</view>
      </picker>
    </view>
  </view>
  <view class="weui-cell weui-cell_input weui-cell_vcode">
    <view class="weui-cell__hd">
      <view class="weui-label">送货时间段</view>
    </view>
    <view class="weui-cell__bd">
      <picker class="weui-btn" mode="time" value="{{time}}" start="11:30" end="21:01" bindchange="bindTimeChange">
        <view class='weui-input picker-input'>请选择</view>
      </picker>
    </view>
  </view>
  <view class="weui-cell weui-cell_input weui-cell_vcode">
    <view class="weui-cell__hd">
      <view class="weui-label">分类</view>
    </view>
    <view class="weui-cell__bd">
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
        <view class='weui-input picker-input'>请选择</view>
      </picker>
    </view>
  </view>
  <view class="weui-cell weui-cell_input weui-cell_vcode">
    <view class="weui-cell__hd">
      <view class="weui-label">签收方式</view>
    </view>
    <view class="weui-cell__bd">
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
        <view class='weui-input picker-input'>请选择</view>
      </picker>
    </view>
  </view>
</view>
<button class="weui-btn type1-btn" type="primary">提交</button>